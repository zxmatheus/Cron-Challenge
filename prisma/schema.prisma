generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Moeda {
  id            String   @id @default(uuid())
  nome          String
  symbol        String   @unique
  precos        Preco[]
  dataDeCriacao DateTime @default(now())
}

model Preco {
  id          String   @id @default(uuid())
  moedaId     String
  valor       Decimal
  dataDoValor DateTime

  moeda Moeda @relation(fields: [moedaId], references: [id])

  @@unique([moedaId, dataDoValor])
  @@index([moedaId, dataDoValor])
}
